{
	"compilerOptions": {
		"target": "es2021",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"outDir": "dist",
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"rootDirs": ["src"],
		"declaration": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "test/**/*.ts"]
}
